<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.GridPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.eseo.calculatrice.CalculatriceController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <center>
        <VBox>
            <Label text="Number 1:"/>
            <TextField fx:id="num1"/>


            <GridPane hgap="5" vgap="5" alignment="center">

                <Button text="7" onMouseClicked="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button text="8" onMouseClicked="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button text="9" onMouseClicked="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                <Button text="4" onMouseClicked="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Button text="5" onMouseClicked="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button text="6" onMouseClicked="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button text="*" onMouseClicked="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Button text="1" onMouseClicked="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button text="2" onMouseClicked="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button text="3" onMouseClicked="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Button text="-" onMouseClicked="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Button text="0" onMouseClicked="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Button text="C" onMouseClicked="#handleClear" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button text="=" onMouseClicked="#handleEqual" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Button text="+" onMouseClicked="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            </GridPane>
        </VBox>
    </center>

</BorderPane>
